src/components/Header.tsx
import { useState } from "react";
import { Button } from "./ui/button";
import { Menu, X } from "lucide-react";

const Header = () => {
  const [isMenuOpen, setIsMenuOpen] = useState(false);

  const menuItems = [
    { label: "الرئيسية", href: "#home" },
    { label: "من أنا", href: "#about" },
    { label: "الدورات", href: "#courses" },
    { label: "الموارد", href: "#resources" },
    { label: "الشهادات", href: "#testimonials" },
    { label: "تواصل معنا", href: "#contact" },
  ];

  const scrollToSection = (href: string) => {
    const element = document.querySelector(href);
    if (element) {
      element.scrollIntoView({ behavior: "smooth" });
    }
    setIsMenuOpen(false);
  };

  return (
    <header className="fixed top-0 w-full bg-white/95 backdrop-blur-sm border-b z-50">
      <div className="container mx-auto px-4">
        <div className="flex items-center justify-between h-16">
          {/* Logo */}
          <div className="flex items-center space-x-2 space-x-reverse">
            <div className="w-10 h-10 rounded-full bg-gradient-to-br from-brand-blue to-brand-gold flex items-center justify-center">
              <span className="text-white font-bold text-lg">ع</span>
            </div>
            <div className="flex flex-col">
              <span className="font-bold text-lg gradient-text">عثمان الغول</span>
              <span className="text-xs text-gray-500">المصمم الذكي</span>
            </div>
          </div>

          {/* Desktop Menu */}
          <nav className="hidden md:flex items-center space-x-8 space-x-reverse">
            {menuItems.map((item) => (
              <button
                key={item.href}
                onClick={() => scrollToSection(item.href)}
                className="text-gray-700 hover:text-brand-blue transition-colors duration-200 font-medium"
              >
                {item.label}
              </button>
            ))}
          </nav>

          {/* CTA Button */}
          <div className="hidden md:block">
            <Button 
              onClick={() => scrollToSection("#courses")}
              className="bg-brand-blue hover:bg-brand-blue/90"
            >
              سجّل الآن
            </Button>
          </div>

          {/* Mobile Menu Button */}
          <Button
            variant="ghost"
            size="sm"
            className="md:hidden"
            onClick={() => setIsMenuOpen(!isMenuOpen)}
          >
            {isMenuOpen ? <X className="h-6 w-6" /> : <Menu className="h-6 w-6" />}
          </Button>
        </div>

        {/* Mobile Menu */}
        {isMenuOpen && (
          <div className="md:hidden py-4 border-t">
            <nav className="flex flex-col space-y-4">
              {menuItems.map((item) => (
                <button
                  key={item.href}
                  onClick={() => scrollToSection(item.href)}
                  className="text-right text-gray-700 hover:text-brand-blue transition-colors duration-200 font-medium py-2"
                >
                  {item.label}
                </button>
              ))}
              <Button 
                onClick={() => scrollToSection("#courses")}
                className="bg-brand-blue hover:bg-brand-blue/90 mt-4"
              >
                سجّل الآن
              </Button>
            </nav>
          </div>
        )}
      </div>
    </header>
  );
};

export default Header;
src/components/Hero.tsx

import { Button } from "./ui/button";
import { ArrowDown } from "lucide-react";

const Hero = () => {
  const scrollToSection = (href: string) => {
    const element = document.querySelector(href);
    if (element) {
      element.scrollIntoView({ behavior: "smooth" });
    }
  };

  return (
    <section id="home" className="hero-gradient pt-20 pb-16 lg:pb-24">
      <div className="container mx-auto px-4">
        <div className="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
          {/* Content */}
          <div className="flex-1 text-center lg:text-right animate-fade-in">
            <div className="mb-6">
              <span className="inline-block px-4 py-2 bg-brand-gold/10 text-brand-gold rounded-full text-sm font-medium mb-4">
                🎓 مدرّب معتمد في التصميم الذكي
              </span>
            </div>
            
            <h1 className="text-4xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
              مرحباً، أنا{" "}
              <span className="gradient-text">عثمان الغول</span>
            </h1>
            
            <h2 className="text-xl lg:text-2xl text-gray-600 mb-6 font-medium">
              خبير التصميم الداخلي والذكاء الاصطناعي
            </h2>
            
            <p className="text-lg text-gray-600 mb-8 max-w-2xl mx-auto lg:mx-0 leading-relaxed">
              أساعد المصممين والمهندسين على إتقان استخدام الذكاء الاصطناعي في التصميم الداخلي
              من خلال دورات تدريبية متخصصة ومحتوى تعليمي عالي الجودة
            </p>

            <div className="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              <Button 
                size="lg" 
                className="bg-brand-blue hover:bg-brand-blue/90 text-white px-8 py-4 text-lg hover-lift"
                onClick={() => scrollToSection("#courses")}
              >
                استكشف الدورات
              </Button>
              <Button 
                variant="outline" 
                size="lg"
                className="border-brand-blue text-brand-blue hover:bg-brand-blue hover:text-white px-8 py-4 text-lg hover-lift"
                onClick={() => scrollToSection("#about")}
              >
                تعرّف علي أكثر
              </Button>
            </div>

            {/* Stats */}
            <div className="flex flex-col sm:flex-row gap-8 mt-12 justify-center lg:justify-start">
              <div className="text-center lg:text-right">
                <div className="text-3xl font-bold gradient-text">500+</div>
                <div className="text-gray-600">طالب متدرب</div>
              </div>
              <div className="text-center lg:text-right">
                <div className="text-3xl font-bold gradient-text">10+</div>
                <div className="text-gray-600">دورة تدريبية</div>
              </div>
              <div className="text-center lg:text-right">
                <div className="text-3xl font-bold gradient-text">98%</div>
                <div className="text-gray-600">رضا الطلاب</div>
              </div>
            </div>
          </div>

          {/* Image */}
          <div className="flex-1 max-w-lg animate-slide-in-right">
            <div className="relative">
              <div className="absolute inset-0 bg-gradient-to-br from-brand-blue/20 to-brand-gold/20 rounded-3xl transform rotate-6"></div>
              <img
                src="https://images.unsplash.com/photo-1649972904349-6e44c42644a7?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
                alt="عثمان الغول - خبير التصميم الداخلي والذكاء الاصطناعي"
                className="relative rounded-3xl shadow-2xl hover-lift w-full"
              />
              <div className="absolute -bottom-6 -right-6 bg-white p-4 rounded-2xl shadow-lg">
                <div className="flex items-center gap-3">
                  <div className="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                  <span className="text-sm font-medium text-gray-700">متاح للتدريب</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Scroll Indicator */}
        <div className="text-center mt-16 lg:mt-20">
          <button
            onClick={() => scrollToSection("#about")}
            className="inline-flex items-center gap-2 text-gray-500 hover:text-brand-blue transition-colors duration-200 group"
          >
            <span className="text-sm">اكتشف المزيد</span>
            <ArrowDown className="w-4 h-4 group-hover:translate-y-1 transition-transform duration-200" />
