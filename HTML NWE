src/components/Contact.tsx

import { useState } from "react";
import { Card, CardContent, CardHeader, CardTitle } from "./ui/card";
import { Button } from "./ui/button";
import { Input } from "./ui/input";
import { Textarea } from "./ui/textarea";
import { Mail, Phone, User } from "lucide-react";

const Contact = () => {
  const [formData, setFormData] = useState({
    name: "",
    email: "",
    phone: "",
    interest: "",
    message: ""
  });

  const handleInputChange = (e: React.ChangeEvent<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    // Here you would typically send the data to your backend
    alert("شكراً لتواصلك معنا! سنرد عليك في أقرب وقت ممكن.");
    setFormData({
      name: "",
      email: "",
      phone: "",
      interest: "",
      message: ""
    });
  };

  const contactMethods = [
    {
      icon: <Mail className="w-6 h-6" />,
      title: "البريد الإلكتروني",
      value: "omar@smartdesigner.academy",
      action: "إرسال رسالة"
    },
    {
      icon: <Phone className="w-6 h-6" />,
      title: "واتساب",
      value: "+970 59 123 4567",
      action: "تواصل واتساب"
    },
    {
      icon: <User className="w-6 h-6" />,
      title: "استشارة مجانية",
      value: "احجز جلسة 30 دقيقة",
      action: "احجز الآن"
    }
  ];

  return (
    <section id="contact" className="py-20 bg-white">
      <div className="container mx-auto px-4">
        <div className="text-center mb-16">
          <h2 className="text-4xl font-bold text-gray-900 mb-4">تواصل معنا</h2>
          <p className="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            هل لديك استفسار أو تريد معرفة المزيد عن دوراتنا؟ نحن هنا لمساعدتك
          </p>
        </div>

        <div className="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
          {/* Contact Form */}
          <Card className="border-0 shadow-lg">
            <CardHeader>
              <CardTitle className="text-2xl text-gray-900">نموذج التواصل السريع</CardTitle>
            </CardHeader>
            <CardContent>
              <form onSubmit={handleSubmit} className="space-y-6">
                <div>
                  <label htmlFor="name" className="block text-sm font-medium text-gray-700 mb-2">
                    الاسم الكامل *
                  </label>
                  <Input
                    id="name"
                    name="name"
                    type="text"
                    required
                    value={formData.name}
                    onChange={handleInputChange}
                    placeholder="اكتب اسمك الكامل"
                    className="w-full"
                  />
                </div>

                <div>
                  <label htmlFor="email" className="block text-sm font-medium text-gray-700 mb-2">
                    البريد الإلكتروني *
                  </label>
                  <Input
                    id="email"
                    name="email"
                    type="email"
                    required
                    value={formData.email}
                    onChange={handleInputChange}
                    placeholder="example@email.com"
                    className="w-full"
                  />
                </div>

                <div>
                  <label htmlFor="phone" className="block text-sm font-medium text-gray-700 mb-2">
                    رقم الهاتف
                  </label>
                  <Input
                    id="phone"
                    name="phone"
                    type="tel"
                    value={formData.phone}
                    onChange={handleInputChange}
                    placeholder="+970 59 123 4567"
                    className="w-full"
                  />
                </div>

                <div>
                  <label htmlFor="interest" className="block text-sm font-medium text-gray-700 mb-2">
                    مجال الاهتمام
                  </label>
                  <select
                    id="interest"
                    name="interest"
                    value={formData.interest}
                    onChange={handleInputChange}
                    className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-brand-blue focus:border-transparent"
                  >
                    <option value="">اختر مجال الاهتمام</option>
                    <option value="basic-course">الدورة الأساسية</option>
                    <option value="midjourney-course">دورة Midjourney</option>
                    <option value="corporate-training">التدريب المؤسسي</option>
                    <option value="consultation">استشارة فنية</option>
                    <option value="custom-course">دورة مخصصة</option>
                  </select>
                </div>

                <div>
                  <label htmlFor="message" className="block text-sm font-medium text-gray-700 mb-2">
                    رسالتك
                  </label>
                  <Textarea
                    id="message"
                    name="message"
                    value={formData.message}
                    onChange={handleInputChange}
                    placeholder="اكتب رسالتك أو استفسارك هنا..."
                    className="w-full h-32 resize-none"
                  />
                </div>

                <Button 
                  type="submit"
                  className="w-full bg-brand-blue hover:bg-brand-blue/90 text-white py-3"
                >
                  إرسال الرسالة
                </Button>
              </form>
            </CardContent>
          </Card>

          {/* Contact Methods */}
          <div className="space-y-8">
            {contactMethods.map((method, index) => (
              <Card key={index} className="hover-lift border-0 shadow-lg">
                <CardContent className="p-6">
                  <div className="flex items-start gap-4">
                    <div className="w-12 h-12 bg-brand-blue/10 rounded-full flex items-center justify-center text-brand-blue">
                      {method.icon}
                    </div>
                    <div className="flex-1">
                      <h3 className="font-semibold text-gray-900 mb-2">{method.title}</h3>
                      <p className="text-gray-600 mb-3">{method.value}</p>
                      <Button 
                        variant="outline" 
                        size="sm"
                        className="border-brand-blue text-brand-blue hover:bg-brand-blue hover:text-white"
                      >
                        {method.action}
                      </Button>
                    </div>
                  </div>
                </CardContent>
              </Card>
            ))}

            {/* Corporate Training CTA */}
            <Card className="bg-gradient-to-r from-brand-blue to-brand-gold text-white border-0">
              <CardContent className="p-8 text-center">
                <h3 className="text-2xl font-bold mb-4">تدريب مؤسسي مخصص</h3>
                <p className="mb-6 opacity-90">
                  هل تدير مكتب هندسي أو شركة تصميم؟ نقدم برامج تدريبية مخصصة لفريقك
                </p>
                <Button 
                  className="bg-white text-brand-blue hover:bg-gray-100"
                >
                  احصل على عرض خاص
                </Button>
              </CardContent>
            </Card>
          </div>
        </div>

        {/* FAQ Section */}
        <div className="mt-20 max-w-4xl mx-auto">
          <h3 className="text-2xl font-bold text-gray-900 text-center mb-12">
            الأسئلة الشائعة
          </h3>
          <div className="grid md:grid-cols-2 gap-8">
            <div>
              <h4 className="font-semibold text-gray-900 mb-2">هل الدورات مناسبة للمبتدئين؟</h4>
              <p className="text-gray-600 text-sm">نعم، لدينا دورات تبدأ من المستوى الأساسي وتناسب جميع المستويات.</p>
            </div>
            <div>
              <h4 className="font-semibold text-gray-900 mb-2">كم مدة الدورة التدريبية؟</h4>
              <p className="text-gray-600 text-sm">تتراوح مدة الدورات من 18 إلى 40 ساعة تدريبية حسب نوع الدورة.</p>
            </div>
            <div>
              <h4 className="font-semibold text-gray-900 mb-2">هل أحصل على شهادة معتمدة؟</h4>
              <p className="text-gray-600 text-sm">نعم، تحصل على شهادة معتمدة من جامعة النجاح الوطنية عند إتمام الدورة.</p>
            </div>
            <div>
              <h4 className="font-semibold text-gray-900 mb-2">هل يمكن التدريب اونلاين؟</h4>
              <p className="text-gray-600 text-sm">نعم، نوفر خيارات التدريب المباشر أونلاين بالإضافة للتدريب الحضوري.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  );
};

export default Contact;
