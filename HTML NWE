export default Index;
src/components/Header.tsx
import { useState } from "react";
import { Button } from "./ui/button";
import { Menu, X } from "lucide-react";

const Header = () => {
  const [isMenuOpen, setIsMenuOpen] = useState(false);

  const menuItems = [
    { label: "ุงูุฑุฆูุณูุฉ", href: "#home" },
    { label: "ูู ุฃูุง", href: "#about" },
    { label: "ุงูุฏูุฑุงุช", href: "#courses" },
    { label: "ุงูููุงุฑุฏ", href: "#resources" },
    { label: "ุงูุดูุงุฏุงุช", href: "#testimonials" },
    { label: "ุชูุงุตู ูุนูุง", href: "#contact" },
  ];

  const scrollToSection = (href: string) => {
    const element = document.querySelector(href);
    if (element) {
      element.scrollIntoView({ behavior: "smooth" });
    }
    setIsMenuOpen(false);
  };

  return (
    <header className="fixed top-0 w-full bg-white/95 backdrop-blur-sm border-b z-50">
      <div className="container mx-auto px-4">
        <div className="flex items-center justify-between h-16">
          {/* Logo */}
          <div className="flex items-center space-x-2 space-x-reverse">
            <div className="w-10 h-10 rounded-full bg-gradient-to-br from-brand-blue to-brand-gold flex items-center justify-center">
              <span className="text-white font-bold text-lg">ุน</span>
            </div>
            <div className="flex flex-col">
              <span className="font-bold text-lg gradient-text">ุนุซูุงู ุงูุบูู</span>
              <span className="text-xs text-gray-500">ุงููุตูู ุงูุฐูู</span>
            </div>
          </div>

          {/* Desktop Menu */}
          <nav className="hidden md:flex items-center space-x-8 space-x-reverse">
            {menuItems.map((item) => (
              <button
                key={item.href}
                onClick={() => scrollToSection(item.href)}
                className="text-gray-700 hover:text-brand-blue transition-colors duration-200 font-medium"
              >
                {item.label}
              </button>
            ))}
          </nav>

          {/* CTA Button */}
          <div className="hidden md:block">
            <Button 
              onClick={() => scrollToSection("#courses")}
              className="bg-brand-blue hover:bg-brand-blue/90"
            >
              ุณุฌูู ุงูุขู
            </Button>
          </div>

          {/* Mobile Menu Button */}
          <Button
            variant="ghost"
            size="sm"
            className="md:hidden"
            onClick={() => setIsMenuOpen(!isMenuOpen)}
          >
            {isMenuOpen ? <X className="h-6 w-6" /> : <Menu className="h-6 w-6" />}
          </Button>
        </div>

        {/* Mobile Menu */}
        {isMenuOpen && (
          <div className="md:hidden py-4 border-t">
            <nav className="flex flex-col space-y-4">
              {menuItems.map((item) => (
                <button
                  key={item.href}
                  onClick={() => scrollToSection(item.href)}
                  className="text-right text-gray-700 hover:text-brand-blue transition-colors duration-200 font-medium py-2"
                >
                  {item.label}
                </button>
              ))}
              <Button 
                onClick={() => scrollToSection("#courses")}
                className="bg-brand-blue hover:bg-brand-blue/90 mt-4"
              >
                ุณุฌูู ุงูุขู
              </Button>
            </nav>
          </div>
        )}
      </div>
    </header>
  );
};

export default Header;
